    <image src="{{ansimg}}"></image>
    <view class="master-brief">
      <view class="master-user">{{ansname}}</view>
      <view class="master-intro">{{userMore.simpleIntro}}</view>
      <view class="master-fans">{{userMore.fans}}人关注</view>
