/**index.wxss**/
.index-container{
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.house-list {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 10rpx;
}
.house-condition_box {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.house-condition {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 10rpx;
}
.house-condition-check{
  height: 100%;
  width: 60%; 
  padding: 20rpx 0 10rpx 10rpx;
}
.house-condition-btn {
  height: 100rpx;
  display: flex;
}
.confirm-btn{
  width: 50%;
  padding-top: 12rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
}
.reset-btn{
  width: 50%;
  padding-top: 12rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
}

.list-box{
  width: 100%;
  height: 400rpx;
  padding: 15rpx;
  overflow: auto;
  background: #cccccc;
}
.list-head-box{
  white-space: nowrap;
}
.list-head{
  display: inline-block;
  width: 600rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #dddddd;
  border-right: 1rpx solid #dddddd;
  text-align: center;
  line-height: 100rpx;
}
.list-body-box{
  white-space: nowrap;
}
.list-body{
  display: inline-block;
  width: 600rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #dddddd;
  border-right: 1rpx solid #dddddd;
  text-align: center;
  line-height: 100rpx;
}