/* pages/login/index.wxss */
.login-bg-box {
  height: 100vh;
  width: 100vw;
  position: absolute;
  top: 0;
  /* background-color: antiquewhite; */
  z-index: 2;
  background: url('https://ecoverse.189.cn:8090/mod/ar/login/bg.png') no-repeat;
  background-size: 100%;
}

.login-box {
  position: fixed;
  top: 50vh;
  width: 100%;
}
.yszc {
  width: 100%;
  height: 32rpx;
  font-size: 24rpx;
  font-family: MiSans, MiSans-Regular;
  font-weight: 400;
  text-align: center;
  color: #242322;
  margin-top: 40rpx;
}
.yszc image {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
}
.yszc .text {
  margin-left: 10rpx;
  vertical-align: middle;
  display: inline-block;
  font-size: 28rpx;
}
.ydtext {
  color: #ffffff;
}
.yszctext {
  color: #e5bb80;
}

.login-btn-box {
  padding: 0 32rpx;
}
.login-btn {
  height: 88rpx;
  margin-top: 40rpx;
  background: #e5bb80;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-btn image {
  width: 48rpx;
  height: 48rpx;
}
.login-btn text {
  margin-left: 22rpx;
  color: #ffffff;
  opacity: 1;
  font-size: 28rpx;
  font-family: MiSans, MiSans-Medium;
  font-weight: 500;
  text-align: center;
  color: #242322;
}
